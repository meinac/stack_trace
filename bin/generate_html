#!/usr/bin/env ruby

require "bundler/setup"
require "stack_trace"

class Foo
    def say_hi
        'hi'
    end
end

class Bar
    def adapter_hi
        Foo.new.say_hi
    end
end

StackTrace.configure do |config|
  config.enabled = true
  config.modules = {
      Foo => { instance_methods: :all, class_methods: :all },
      Bar => { instance_methods: :all, class_methods: :all },
  }
end

trace = StackTrace.trace do
    Bar.new.adapter_hi
end

trace.persist
trace.as_html
